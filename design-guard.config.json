{
  "strict": false,
  "include": ["src"],
  "exclude": [
    "dist/**",
    "node_modules/**",
    "storybook-static/**",
    "src/styles/tokens/**",
    "src/assets/styles/tokens/**",
    "src/tokens/**"
  ],
  "ignoreFiles": [
    "src/assets/styles/scss/_config.scss"
  ],
  "rules": {
    "noHardcodedLengths": true,
    "noHardcodedColors": true
  },
  "allow": {
    "px": ["0px", "1px"],
    "lengths": ["0%", "100%"]
  }
}
